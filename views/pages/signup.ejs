<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>

  <style>
.signup-header {
  background-color: #fff;
  height: 6em;
}
.signup-body {
  background-color: #EDEFED;
  color: #000;
  padding-top: 2em;
}
.profile-image {
  padding: 1em 0.5em;
  border: 2px dashed #000;
  text-align: center;
}
.portfolio-image {
  padding: 1em 0;
  border: 2px dashed #000;
  text-align: center;
  margin: 0.5em 0;
}
.signup-finish {
  color: #ffffff;
  background-color: #00ff00;
  border: none;
  width: 50%;
  height: 3em;
}
  </style>

</head>

<body>
  <% include ../partials/gtm.ejs %>


<div class="signup-header container">
  <div class="row">
    <div class="col-xs-12">
      <div class="logo pull-left"><img style="width:40px" src="/images/logo-dark.png"></div>
    </div>
  </div>
</div>

<div class="signup-body container">

  <form>

    <div class="row">
      <div class="col-xs-12 col-sm-3">
        <div class="pull-right profile-image">
          <h3>Add</h3>
          <p>Profile Image</p>
        </div>
      </div>

      <div class="col-xs-12 col-sm-7">
        <div class="row">
          <div class="col-xs-12 col-sm-6">

            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" id="firstname" placeholder="First Name">
              <input type="text" class="form-control" id="lastname" placeholder="Last Name">
            </div>
            <div class="form-group">
              <label>Contact</label>
              <input type="text" class="form-control" id="email" placeholder="Email Address">
              <input type="text" class="form-control" id="phone" placeholder="Phone Number">
            </div>
            <div class="form-group">
              <label>Location</label>
              <input type="text" class="form-control" id="location" placeholder="Zip Code">
            </div>
            <div class="form-group">
              <label>Interests</label>
              <div>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-baby">Baby</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-food">Food</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
                <button class="btn btn-default" data-toggle="button" aria-pressed="false" autocomplete="off" type="button" id="interest-portait">Portrait</button>
              </div>
            </div>

          </div>
          <div class="col-xs-12 col-sm-6">

            <div class="form-group">
              <label>Contact</label>
              <input type="text" class="form-control" id="website" placeholder="Website Url">
              <input type="text" class="form-control" id="instagram" placeholder="@Instagram">
            </div>
            <div class="form-group">
              <label>Skill &amp; Pricing</label>
              <input type="text" class="form-control" id="experiencelevel" placeholder="Expeience Level">
              <input type="text" class="form-control" id="pricelevel" placeholder="$$$$$">
            </div>
            <div class="form-group">
              <label>Short Bio</label>
              <textarea class="form-control" id="bio" placeholder="Short Bio" rows="8" cols="40"></textarea>
            </div>
            <div class="form-group">
              <label>Portfolio Images</label>
              <div class="row">
                <div class="col-xs-12 col-sm-6">
                  <div class="portfolio-image">Image 1</div>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <div class="portfolio-image">Image 2</div>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <div class="portfolio-image">Image 3</div>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <div class="portfolio-image">Image 4</div>
                </div>
              </div>
            </div>

          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group text-center">
              <button id="signup-finish" class="signup-finish btn btn-default">Finish</button>
            </div>
          </div>
        </div>
      </div>


      <div class="col-xs-12 col-sm-3">
      </div>

    </div>

  </form>
</div>


<% include ../partials/footer.ejs %>

</body>
</html>
